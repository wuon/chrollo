{
  "name": "chrollo",
  "repository": "git://github.com/Wuon/chrollo.git",
  "version": "0.1.0",
  "description": "a node.js based CLI to watch anime.",
  "bin": {
    "chrollo": "./lib/index.js"
  },
  "scripts": {
    "prebuild": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "tsc",
    "start": "tsc && node ./lib/index.js",
    "reset": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "author": "wuon",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.1",
    "ts-node": "^10.3.0",
    "tslint": "^5.12.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "axios": "^0.23.0",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.0",
    "node-html-parser": "^5.0.0",
    "ora": "^5.4.1"
  }
}
